<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.xxx.livertmp.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未连接"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美顏"
            android:onClick="OnBtnClick"
            />

        <Button
        android:id="@+id/btn_rtmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推流" android:onClick="OnBtnClick" />

        <Button
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换" android:onClick="OnBtnClick" />
        <Button
            android:id="@+id/btn_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静音" android:onClick="OnBtnClick" />
    </LinearLayout>


</RelativeLayout>
